{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-confusing-arrow": 0,
    "padded-blocks": 0,
    "consistent-return": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension": 0,
    "jsx-quotes": [
      2,
      "prefer-double"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json",
          ".less"
        ],
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__CLIENT__": true
  }
}
